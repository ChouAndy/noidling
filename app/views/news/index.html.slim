= render 'shared/good_sites'
.content
  = render 'shared/marquees'
  .news
    .title
    .inner
      .list
        - if @news.empty?
          .center
            p 目前尚無任何最新消息
        - else
          - @news.each do |news|
            p
              span.date = '[ ' + news.public_date.to_s + ' ]　'
              span.click = '[ 點閱：' + news.click.to_s + ' ]　'
              = link_to truncate(news.title, length: 40), news_path(news)
          = paginate @news
    .footer_line
